<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--注解驱动 ===> 自动配置最新版本的注解的处理器映射器和处理器适配器-->
    <mvc:annotation-driven />

    <!--注解扫描 ===> 扫描Controller类-->
    <context:component-scan base-package="com.test.goods.controller" ></context:component-scan>

    <!--视图解析器-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/"></property>
        <property name="suffix" value=".jsp"></property>
    </bean>

    <!--指定放行的静态资源(js/css/html等)-->
    <!--<mvc:resources mapping="/js/**" location="/js/" ></mvc:resources>-->
    <!--让mvc能够读取到webapp文件夹下的静态资源-->
    <mvc:default-servlet-handler></mvc:default-servlet-handler>

    <!--配置springmvc文件上传的解析器-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!--最大的上传大小-->
        <property name="maxUploadSize" value="5242880" />
    </bean>

    <!--加载全局配置文件-->
    <context:property-placeholder location="classpath:spring/config.properties"/>

    <!--
    &lt;!&ndash;配置springmvc的拦截器&ndash;&gt;
    <mvc:interceptors>
         &lt;!&ndash;是否进行拦截器, 匹配拦截规则&ndash;&gt;
         <mvc:interceptor>
             &lt;!&ndash;拦截&ndash;&gt;
             &lt;!&ndash;<mvc:mapping path="/**" />&ndash;&gt;
             <mvc:mapping path="/course/*" />
             <mvc:mapping path="/video/*" />
             <mvc:mapping path="/speaker/*" />
             &lt;!&ndash;放行&ndash;&gt;
             <mvc:exclude-mapping path="/goods/showLogin" />

             &lt;!&ndash;指定拦截器类&ndash;&gt;
             <bean class="com.test.goods.interceptor.HandlerInterceptor01" />
         </mvc:interceptor>
    </mvc:interceptors>
    -->
    <!--配置异常处理器-->
    <bean id="myExceptionResolver" class="com.test.goods.exception.MyExceptionResolver" />

</beans>